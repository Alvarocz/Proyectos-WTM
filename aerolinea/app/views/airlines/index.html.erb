<h1>Aerolineas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @airlines.each do |airline| %>
      <tr>
        <td><%= airline.name %></td>
        <td><%= link_to 'Ver', airline %></td>
        <td><%= link_to 'Editar', edit_airline_path(airline) %></td>
        <td><%= link_to 'Quitar', airline, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear aerolinea', new_airline_path %>
<a href="/">Ir a home</a>

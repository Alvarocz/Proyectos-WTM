<h1>Lista de aviones</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Piloto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @airplanes.each do |airplane| %>
      <tr>
        <td><%= airplane.name %></td>
        <td><%= airplane.pilot.name %></td>
        <td><%= link_to 'Ver', airplane %></td>
        <td><%= link_to 'Editar', edit_airplane_path(airplane) %></td>
        <td><%= link_to 'Quitar', airplane, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ingresar nuevo avion', new_airplane_path %>

<a href="/">Ir a home</a>

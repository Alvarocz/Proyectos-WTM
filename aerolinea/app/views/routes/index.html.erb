<h1>Lista de rutas</h1>

<table>
  <thead>
    <tr>
      <th>Origen</th>
      <th>Destino</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.origin %></td>
        <td><%= route.destination %></td>
        <td><%= link_to 'Ver', route %></td>
        <td><%= link_to 'Editar', edit_route_path(route) %></td>
        <td><%= link_to 'Eliminar', route, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ingresar nueva ruta', new_route_path %>

<a href="/">Ir a home</a>

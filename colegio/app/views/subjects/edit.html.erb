<h1>Editar la asignatura</h1>

<%= form_for @subject do |f| %>
  <div>
    <%= f.label "Nombre" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label "Codigo" %>
    <%= f.text_field :code %>
  </div>

  <div>
    <%= f.label "Profesor" %>
    <%= f.select :teacher_id, Teacher.all.collect { |t| [t.name, t.id] } %>
  </div

  <div>
    <%= f.submit "Actualizar" %>
  </div>
<% end %>


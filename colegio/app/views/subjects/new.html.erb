<h1>Ingresar nueva asignatura</h1>

<%= form_for @subject do |f| %>
  <div class="form_container">
    <div>
      <%= f.label "Nombre" %><br>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label "Codigo" %><br>
      <%= f.text_field :code %>
    </div>

    <div>
      <%= f.submit "Ingresar" %>
    </div>
  </div>
<% end %>

<a href="/subjects/" class="link_button">Atras</a>


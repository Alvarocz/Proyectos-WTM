<h1>Crear nueva respuesta</h1>

<%= form_for @answer do |f| %>
  <div class="form_container">
    <div>
      <%= f.label "Mensaje" %><br>
      <%= f.text_field :message %>
    </div>

    <div>
      <%= f.label "Estudiante" %><br>
      <%= f.select :student_id, Student.all.collect { |s| [s.name, s.last_name, s.id] } %>
    </div>

    <div>
      <%= f.label "Tarea" %><br>
      <%= f.select :homework_id, Homework.all.collect { |s| [s.statement, s.id] } %>
    </div>

    <div>
      <%= f.submit "Enviar respuesta" %>
    </div>
  </div>
<% end %>

<a href="/answers/" class="link_button">Atras</a>

<a href="/" class="link_button">Ir a home</a>
<h1>Estudiantes</h1>

<ul>
  <% @students.each do |student| %>
    <li>
      <strong>Nombre: </strong>
      <%= student.name %><br>
      <strong>Apellido: </strong>
      <%= student.last_name %><br>
      <strong>Identificacion: </strong>
      <%= student.identification %><br>
      <strong>Email: </strong>
      <%= student.email %><br>
      <%= link_to "Ver", student_path(student) %> |
      <%= link_to "Editar", edit_student_path(student) %> |
      <%= link_to "Eliminar", student_path(student), \
        method: :delete, data: { confirm: "Desea retirar el estudiante #{student.name}?" } %> |
      <%= link_to "Ver asignaturas", by_student_path(student) %>
    </li>
  <% end %>
</ul>

<a href="/students/new"><h3>Registrar nuevo estudiante</h3></a>

<a href="/"><h3>Ir a home</h3></a>


<h2>Buscar estudiante por nombre</h2>
<%= form_tag "/students", method: :get do |f| %>
  <%= label_tag "Nombre" %>
  <%= text_field_tag :name %>
  <%= submit_tag "Buscar" %>
<% end %>
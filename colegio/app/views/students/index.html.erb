<h1>Estudiantes</h1>

<ul>
  <% @students.each do |student| %>
    <li>
      <div>
        <strong>Nombre: </strong>
        <%= student.name %><br>

        <strong>Apellido: </strong>
        <%= student.last_name %><br>

        <strong>Identificacion: </strong>
        <%= student.identification %><br>

        <strong>Email: </strong>
        <%= student.email %><br>
      </div>

      <div>
        <%= link_to "Ver", student_path(student), :class => "crud_button" %>
        <%= link_to "Editar", edit_student_path(student), :class => "crud_button" %>
        <%= link_to "Eliminar", student_path(student), \
          method: :delete, data: { confirm: "Desea retirar el estudiante #{student.name}?" }, \
          :class => "crud_button"  %>
        <%= link_to "Ver asignaturas", by_student_path(student), :class => "crud_button" %>
      </div>
    </li>
  <% end %>
</ul>

<a href="/students/new" class="link_button">Registrar nuevo estudiante</a>

<a href="/" class="link_button">Ir a home</a>

<div class="search_container">
  <%= form_tag "/students", method: :get do |f| %>
    <%= label_tag "Nombre" %>
    <%= text_field_tag :name %>
    <%= submit_tag "Buscar" %>
  <% end %>
</div>
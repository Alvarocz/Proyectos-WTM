<h1>Editar el estudiante</h1>

<%= form_for @student do |f| %>
  <div class="form_container">
    <div>
      <%= f.label "Nombre" %><br>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label "Adivellido" %><br>
      <%= f.text_field :last_name %>
    </div>

    <div>
      <%= f.label "Identificacion" %><br>
      <%= f.text_field :identification %>
    </div>

    <div>
      <%= f.label "Email" %><br>
      <%= f.text_field :email %>
    </div>

    <div>
      <%= f.label "Asignaturas" %><br>
      <%= f.collection_check_boxes :subject_ids, Subject.all, :id, :name %>
    </div>

    <div>
      <%= f.submit "Actualizar informacion" %>
    </div>
  </div>
<% end %>

<a href="/students/" class="link_button">Atras</a>


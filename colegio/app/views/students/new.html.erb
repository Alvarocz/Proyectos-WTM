<h1>Registrar nuevo estudiante</h1>

<%= form_for @student do |f| %>
  <div>
    <%= f.label "Nombre" %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label "Adivellido" %><br>
    <%= f.text_field :last_name %>
  </div>

  <div>
    <%= f.label "Identificacion" %><br>
    <%= f.text_field :identification %>
  </div>

  <div>
    <%= f.label "Email" %><br>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label "Asignaturas" %>
    <%= f.collection_check_boxes :subject_ids, Suject.all.collect { |s| [s.name, s.id] } %>
  </div> 

  <div>
    <%= f.submit "Resgistrar" %>
  </div>
<% end %>


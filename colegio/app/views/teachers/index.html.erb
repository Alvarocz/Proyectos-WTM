<h1>Profesores</h1>

<ul>
  <% @teachers.each do |teacher| %>
    <li>
      <strong>Nombre: </strong>
      <%= teacher.name %><br>
      <strong>Apellido: </strong>
      <%= teacher.last_name %><br>
      <strong>Identificacion: </strong>
      <%= teacher.identification %><br>
      <strong>Asignatura: </strong>
      <%= teacher.subject.name %><br>
      <strong>Email: </strong>
      <%= teacher.email %><br>
      <%= link_to "Ver", teacher_path(teacher) %> |
      <%= link_to "Editar", edit_teacher_path(teacher) %> |
      <%= link_to "Eliminar", teacher_path(teacher), method: :delete, data: { confirm: "Desea quitar el profesor #{teacher.name}?" } %>
    </li>
  <% end %>
</ul>

<a href="/teachers/new"><h3>Registrar nuevo profesor</h3></a>


<h1>Profesores</h1>

<a href="/teachers/new" class="link_button">Registrar nuevo profesor</a>

<ul>
  <% @teachers.each do |teacher| %>
    <li>
      <strong>Nombre: </strong>
      <%= teacher.name %><br>

      <strong>Apellido: </strong>
      <%= teacher.last_name %><br>

      <strong>Identificacion: </strong>
      <%= teacher.identification %><br>

      <strong>Email: </strong>
      <%= teacher.email %><br>

      <% if teacher.subjects != [] %>
        <strong>Asignaturas: </strong><br>
        <ul class="sublist">
          <% teacher.subjects.each do |subject| %>
            <li>
              <%= subject.name %><br>
            </li>
          <% end %>
        </ul>
      <% end %>

      <%= link_to "Ver", teacher_path(teacher), :class => "crud_button" %>
      <%= link_to "Editar", edit_teacher_path(teacher), :class => "crud_button" %>
      <%= link_to "Eliminar", teacher_path(teacher), \
        method: :delete, data: { confirm: "Desea quitar el profesor #{teacher.name}?" }, \
        :class => "crud_button"  %>
    </li>
  <% end %>
</ul>

<a href="/" class="link_button">Ir a home</a>